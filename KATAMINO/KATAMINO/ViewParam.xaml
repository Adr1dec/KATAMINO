<?xml version="1.0" encoding="utf-8" ?>
    
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="KATAMINO.ViewParam">
    
    <VerticalStackLayout>
        <Grid HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ImageButton Source="parametres.png" HorizontalOptions="Start" Margin="30" WidthRequest="30" HeightRequest="30"/>
            <ImageButton Source="regles.png" HorizontalOptions="End" Margin="30" Grid.Column="1" WidthRequest="30" HeightRequest="30" Clicked="OnRegleButtonClicked"/>
        </Grid>
    </VerticalStackLayout>
</ContentView>
